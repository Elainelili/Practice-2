def case_counter(text):
    upper_count = 0
    lower_count = 0

    for char in text:
        if char.isupper():
            upper_count += 1
        elif char.islower():
            lower_count += 1
    print("Uppercase letters count:", upper_count)
    print("Lowercase letters count:", lower_count)
inputs = [
    "Hello World!",
    "PYTHON",
    "python",
    "1234!@#$"
]
for input_text in inputs:
    case_counter(input_text)
